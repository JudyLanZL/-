<view class="background">
  <view class="top">
         <view class="top1" >
              <image src="/images/指向-left.png" class="ima" bindtap="return"></image>
          </view>
        <view class="top2" >
            <image src="/images/通讯录.png" class="ima"></image>
          </view>
         <view class="top3" bindtap="more">
             <image src="/images/省略号.png" class="ima"></image>
         </view>
  </view>
  <view class="heart">
    <view class="heart1">
      <view class="heart11">
        <image src="/images/头像.png" class="headima"></image>
      </view>
      <view class="heart12">
        <view class="heart121"> <text>\n{{ID}}</text></view>
          <view class="heart122"><text>账号：{{number}}</text></view>
        </view>

      </view>
  

    <view class="heart2">
      <view> <text style="white-space:pre-wrap">  {{x}}                      {{y}} \n 关注                  浏览记录  </text></view>

      
    </view>
  </view>

  <view class="low">
    <view class="low1">
         <view class="lowL">
          <image src="/images/钱包.png " class="ima"></image>
          <text style="white-space:pre-wrap">  支付记录</text>
           </view>
           
           <view class="lowR">
            <image src="/images/指向-right.png" class="imax" bindtap="pay"></image>
           </view>
   </view>
    <view class="low1">
       <view class="lowL">
         <image src="/images/like.png " class="ima" ></image>
         <text style="white-space:pre-wrap">  收藏</text>
       </view>
       
       <view class="lowR">
          <image src="/images/指向-right.png" class="imax" bindtap="shoucang"></image>
       </view>
  </view>

    <view class="low1">
        <view class="lowL">
         <image src="/images/设 置.png " class="ima"></image>
         <text style="white-space:pre-wrap">  设置</text>
       </view>
        
        <view class="lowR">
          <image src="/images/指向-right.png" class="imax" bindtap="setting"></image>
        </view>
  </view> 
    
</view>

</view>


